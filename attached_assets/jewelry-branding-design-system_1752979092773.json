{
  "brandIdentity": {
    "name": "Casper's Treasure Chest",
    "tagline": "Premium Jewelry Collection",
    "description": "Discover exquisite jewelry pieces with AI-powered product discovery",
    "personality": [
      "premium",
      "elegant",
      "trustworthy",
      "innovative",
      "timeless"
    ],
    "target": "jewelry enthusiasts seeking quality pieces with modern technology"
  },
  "colorSystem": {
    "primary": {
      "amber": {
        "50": "#fefdf8",
        "100": "#fef3c7",
        "200": "#fde68a",
        "300": "#fcd34d",
        "400": "#fbbf24",
        "500": "#f59e0b",
        "600": "#d97706",
        "700": "#b45309",
        "800": "#92400e",
        "900": "#78350f"
      },
      "usage": "Primary actions, buttons, highlights, brand elements"
    },
    "secondary": {
      "slate": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      "usage": "Text, backgrounds, secondary elements"
    },
    "accents": {
      "purple": {
        "500": "#8b5cf6",
        "600": "#7c3aed",
        "700": "#6d28d9"
      },
      "red": {
        "500": "#ef4444",
        "600": "#dc2626"
      },
      "green": {
        "500": "#10b981",
        "600": "#059669"
      },
      "blue": {
        "500": "#3b82f6",
        "600": "#2563eb"
      },
      "usage": "Status indicators, secondary actions, UI states"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)",
      "background": "linear-gradient(to bottom right, #f8fafc 0%, #f1f5f9 100%)",
      "jewelry": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
      "hero": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "gold": "linear-gradient(135deg, #ffd700 0%, #ffb347 100%)",
      "text": "linear-gradient(to right, #d97706 0%, #b45309 100%)"
    },
    "semantics": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    }
  },
  "typography": {
    "fontStack": {
      "primary": "Geist, system-ui, -apple-system, sans-serif",
      "mono": "Geist Mono, 'Courier New', monospace",
      "fallback": "Arial, Helvetica, sans-serif"
    },
    "hierarchy": {
      "display": {
        "size": "5rem",
        "lineHeight": "1.1",
        "weight": "700",
        "usage": "Hero headlines, main titles"
      },
      "h1": {
        "size": "3rem",
        "lineHeight": "1.2",
        "weight": "700",
        "usage": "Page titles, section headers"
      },
      "h2": {
        "size": "2rem",
        "lineHeight": "1.3",
        "weight": "600",
        "usage": "Section titles, card headers"
      },
      "h3": {
        "size": "1.5rem",
        "lineHeight": "1.4",
        "weight": "600",
        "usage": "Subsection titles, product names"
      },
      "h4": {
        "size": "1.25rem",
        "lineHeight": "1.4",
        "weight": "500",
        "usage": "Component titles, form labels"
      },
      "body": {
        "size": "1rem",
        "lineHeight": "1.6",
        "weight": "400",
        "usage": "Body text, descriptions"
      },
      "small": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "weight": "400",
        "usage": "Supporting text, captions"
      },
      "xs": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "weight": "400",
        "usage": "Labels, tags, metadata"
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },
    "component": {
      "padding": {
        "button": "0.5rem 1rem",
        "card": "1.5rem",
        "modal": "1.5rem",
        "input": "0.75rem 1rem"
      },
      "margin": {
        "section": "3rem 0",
        "component": "1.5rem 0",
        "element": "1rem 0"
      },
      "gap": {
        "grid": "1.5rem",
        "flex": "1rem",
        "inline": "0.5rem"
      }
    }
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
    "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)",
    "usage": {
      "card": "lg",
      "modal": "2xl",
      "button": "lg",
      "dropdown": "xl"
    }
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px",
    "usage": {
      "button": "lg",
      "card": "2xl",
      "input": "lg",
      "badge": "full",
      "modal": "2xl"
    }
  },
  "animations": {
    "transitions": {
      "fast": "150ms ease-in-out",
      "base": "200ms ease-in-out",
      "slow": "300ms ease-in-out"
    },
    "effects": {
      "fadeIn": {
        "duration": "0.6s",
        "easing": "ease-in",
        "keyframes": "from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); }"
      },
      "shimmer": {
        "duration": "2s",
        "easing": "infinite",
        "keyframes": "0% { transform: translateX(-100%); } 100% { transform: translateX(100%); }"
      },
      "hoverScale": {
        "duration": "0.3s",
        "easing": "ease",
        "transform": "scale(1.05)"
      },
      "spin": {
        "duration": "1s",
        "easing": "linear infinite",
        "transform": "rotate(360deg)"
      }
    }
  },
  "iconography": {
    "library": "Lucide React",
    "style": "outline",
    "sizes": {
      "xs": "1rem",
      "sm": "1.25rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "2.5rem"
    },
    "usage": {
      "navigation": "md",
      "buttons": "sm",
      "cards": "md",
      "headers": "lg"
    },
    "primary": [
      "Gem",
      "Upload",
      "ShoppingBag",
      "Search",
      "Heart",
      "ShoppingCart",
      "Eye"
    ]
  },
  "layout": {
    "containers": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "grids": {
      "product": {
        "mobile": "1 column",
        "tablet": "2 columns",
        "desktop": "3 columns",
        "wide": "4 columns",
        "gap": "1.5rem"
      },
      "category": {
        "all": "flex wrap",
        "gap": "0.75rem"
      }
    },
    "header": {
      "height": "auto",
      "sticky": true,
      "backdrop": "blur-md",
      "background": "white/80"
    }
  },
  "accessibility": {
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "focusRing": {
      "color": "amber-500",
      "width": "2px",
      "style": "solid"
    },
    "minTouchTarget": "44px"
  }
}
